$background-color = #ddd
$text-color = #fff

*
  box-sizing border-box

body
  background-color $background-color
  color $text-color
  display grid
  font 16px/1.3 sans-serif
  grid-template-areas:
    "title  title" \
    "social audio"
  grid-template-rows auto 1fr
  height 100vh
  margin 0
  padding 24px

.background
  background-image url(assets/bg.jpg)
  background-position center
  background-repeat no-repeat
  background-size cover
  bottom 0
  left 0
  position fixed
  right 0
  top 0
  z-index -1

svg
  opacity 0
  transition opacity 200ms ease-in
.loaded svg
  opacity 1

h1
  grid-area title
  margin 0
  margin-bottom 25px

.social
  grid-area social
  list-style none
  padding 0
  a
    .underline
      stroke none
      stroke-width 5
    &:hover .underline
      stroke #fff
    @media (hover: none)
      &:hover .underline
        stroke none

.audio
  align-self end
  background-image url(assets/audio-play.svg)
  background-position center
  background-repeat no-repeat
  background-size cover
  cursor pointer
  grid-area audio
  height 48px
  justify-self end
  margin-top auto
  width 48px
.audio.playing
  background-image url(assets/audio-stop.svg)

// Varying sizes per breakpoint.

@media only screen and (min-width: 600px)
  body
    padding 56px
  .audio
    height 56px
    width 56px
  .social::after
    bottom 5px
    height 2px
@media only screen and (min-width: 1024px)
  body
    padding 64px
  .audio
    height 64px
    width 64px
  .social::after
    bottom 5px
    height 4px
