$background-color = #ddd
$text-color = #fff

*
  box-sizing border-box

body
  background-color $background-color
  background-image url(assets/bg.jpg)
  background-position center
  background-repeat no-repeat
  background-size cover
  color $text-color
  display flex
  flex-direction column
  font 16px/1.3 sans-serif
  height 100vh
  margin 0
  padding 24px

h1
  margin 0
  margin-bottom 25px

.social
  margin-right auto
  position relative
  &::after
    background $text-color
    bottom 5px
    content ""
    display none
    height 2px
    left 0
    position absolute
    right 0
  &:hover::after
    display block

.audio
  align-self flex-end
  margin-top auto

// Varying sizes per breakpoint.

@media only screen and (min-width: 600px)
  body
    padding 56px
  .social::after
    bottom 5px
    height 2px
@media only screen and (min-width: 1024px)
  body
    padding 64px
  .social::after
    bottom 5px
    height 4px
