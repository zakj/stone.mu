$background-color = #ddd
$text-color = #fff

*
  box-sizing border-box

body
  background-color $background-color
  color $text-color
  display grid
  font 16px/1.3 sans-serif
  grid-template-areas:
    "title  title" \
    "social audio"
  grid-template-rows auto 1fr
  height 100vh
  margin 0
  padding 24px

.background
  background-image url(assets/bg.jpg)
  background-position center center
  background-repeat no-repeat
  background-size cover
  bottom 0
  left 0
  position fixed
  right 0
  top 0
  z-index -1

svg
  opacity 0
  transform scale(0.8)
  transform-origin left center
  transition opacity 600ms ease-in, transform 800ms ease-in
  transition-timing-function cubic-bezier(0.175, 0.885, 0.32, 1.275)
.social li:nth-child(1) svg
  transition-delay 100ms
.social li:nth-child(2) svg
  transition-delay 200ms
.social li:nth-child(3) svg
  transition-delay 300ms
.loaded svg
  opacity 1
  transform scale(1)

h1
  grid-area title
  margin 0
  margin-bottom 25px

.social
  grid-area social
  list-style none
  padding 0
  a
    display inline-block
    .underline
      stroke-width 5
      stroke #fff
      transform scaleX(0)
      transition transform 150ms ease-in-out
    &:hover .underline
      transform scaleX(1)
    @media (hover: none)
      &:hover .underline
        stroke none

.audio
  align-self end
  background-image url(assets/audio-play.svg)
  background-position center
  background-repeat no-repeat
  background-size cover
  cursor pointer
  grid-area audio
  height 48px
  justify-self end
  margin-top auto
  width 48px
.audio.playing
  background-image url(assets/audio-stop.svg)

// Varying sizes per breakpoint.

@media only screen and (min-width: 600px)
  body
    padding 56px
  .background
    background-position 25% center
  .audio
    height 56px
    width 56px
  .social::after
    bottom 5px
    height 2px
@media only screen and (min-width: 800px)
  .background
    background-position 0% center
@media only screen and (min-width: 1024px)
  body
    padding 64px
  .audio
    height 64px
    width 64px
  .social::after
    bottom 5px
    height 4px
